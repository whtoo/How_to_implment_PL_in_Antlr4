<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="org.teachfx.antlr4.ep18r.vizvmr.utils">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %al [%M(%L)] - %msg%n"/>
        </Console>
        <File name="File" fileName="logs/vizvmr.log" append="false">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %al [%M(%L)] - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
        <Logger name="org.teachfx.antlr4.ep18r.vizvmr" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="org.teachfx.antlr4.ep18r" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>