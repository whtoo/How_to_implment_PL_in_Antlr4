<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" packages="org.teachfx.antlr4.ep21.utils">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %al [%M(%L)] - %msg%n"/>
        </Console>
        <File name="File" fileName="logs/app.log">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %al [%M(%L)] - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="org.teachfx.antlr4.ep21.pass.ir.CymbolIRBuilder" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.teachfx.antlr4.ep21.pass.ast.CymbolASTBuilder" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>