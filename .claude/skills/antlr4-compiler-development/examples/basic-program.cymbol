// Cymbol语言基础示例
// 展示变量声明、基本运算和控制结构

int main() {
    // 变量声明和初始化
    int age = 25;
    float height = 175.5;
    bool isStudent = true;
    string name = "Alice";
    
    // 算术运算
    int nextYear = age + 1;
    float bmi = height / 2.0;
    
    // 条件语句
    if (age >= 18) {
        if (isStudent) {
            print(name + " is an adult student");
        } else {
            print(name + " is an adult working professional");
        }
    } else {
        print(name + " is a minor");
    }
    
    // 循环语句
    int i = 0;
    while (i < 5) {
        print("Count: " + i);
        i = i + 1;
    }
    
    // 函数调用
    int sum = add(10, 20);
    print("Sum result: " + sum);
    
    return 0;
}

// 函数定义示例
int add(int a, int b) {
    return a + b;
}